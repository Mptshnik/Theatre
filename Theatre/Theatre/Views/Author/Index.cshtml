@model AuthorIndex

@{
    ViewData["Title"] = "Авторы";
}

<div class="container-fluid">
    <div id="index">
        <h1 class="text-center" style="margin-bottom:8px;">Авторы</h1>
        <div class="row">
            <div class="col-sm-8">

                <table class="table text-center">
                    <thead>
                        <tr>
                            <th>
                                ФИО
                            </th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Authors)
                        {
                            <tr>
                                <td>
                                    @item.FullName
                                </td>
                                <td>
                                    <a onclick="showInPopup('@Url.Action("Edit", "Author", new { id = item.ID}, Context.Request.Scheme)',
                            'Изменение автора')" class="btn btn-success text-white">Изменить</a>
                                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger text-white">Удалить</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <div class="col-sm-4">
                <div class="col-md-12">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="@Model.Author.FullName" class="control-label"></label>
                            <input asp-for="@Model.Author.FullName" class="form-control" />
                            <span asp-validation-for="@Model.Author.FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Добавить" class="btn btn-primary btn-block" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
