<!DOCTYPE html>
<html lang="ru">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Информационная система театра</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css?v=1.0" runat="server"/>
    <link rel="stylesheet" href="/css/site.css?v=1.0"/>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.4/css/jquery.dataTables.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="navbar-brand">
                    @if (ViewData["CurrentRole"] != null)
                        @if (((int)ViewData["CurrentRole"]) == (int)Roles.Admin)
                        {
                            <a asp-action="AdminPage" asp-controller="Home" class="navbar-brand">Главная</a>
                        }
                        else if (((int)ViewData["CurrentRole"]) == (int)Roles.PerformanceDirector)
                        {
                            <a asp-action="PerformanceDirectorPage" asp-controller="Home" class="navbar-brand">Главная</a>
                        }
                        else if (((int)ViewData["CurrentRole"]) == (int)Roles.Cashier)
                        {
                            <a asp-action="CashierPage" asp-controller="Home" class="navbar-brand">Главная</a>
                        }
                        else if (((int)ViewData["CurrentRole"]) == (int)Roles.TheatreDirector)
                        {
                            <a asp-action="TheatreDirectorPage" asp-controller="Home" class="navbar-brand">Главная</a>
                        }
                        else
                        {
                            <p class="navbar-brand">Театр</p>
                        }
                    </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <div class="modal" tabindex="-1" role="dialog" id="form-modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Информационная система театра
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"
            integrity="sha512-GsLlZN/3F2ErC5ifS5QtgpiJtWd43JWSuIgh7mbzZ8zBps+dvLusV+eNQATqgA/HdeKFVgA5v3S/cIrLF7QnIg=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>  

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
